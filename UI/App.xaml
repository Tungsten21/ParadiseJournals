<Application x:Class="UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:UI"
             xmlns:dataTemplateSelectors="clr-namespace:UI.Resources.DataTemplateSelectors"
             xmlns:itemTemplates="clr-namespace:UI.Controls.ItemsControls.ItemTemplates"
             xmlns:converters="clr-namespace:UI.Resources.Converters"
             Startup="OnStart">
    <Application.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <dataTemplateSelectors:VerticalStackPanelItemTemplateSelector x:Key="VerticalStackPanelItemTemplateSelector"/>
        <converters:MenuBarBooleanToWidthConverter x:Key="MenuBarToWidthConverter"/>
        <converters:NegateBoolConverter x:Key="NegateBoolConverter"/>
        
        <ResourceDictionary x:Key="ItemTemplates">
            <itemTemplates:JournalItemTemplate x:Key="JournalItemTemplate"/>
            <itemTemplates:WishListItemTemplate x:Key="WishListItemTemplate"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
