<UserControl x:Class="UI.Controls.MenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UI.Controls"
             xmlns:icons="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="75"
             DataContext="{Binding MenuBarViewModel}">

    <UserControl.Resources>
        <ResourceDictionary Source="/Resources/Styles/Controls/MenuItemStyle.xaml"/>
    </UserControl.Resources>
    


    <Menu>
        <Menu.ItemsPanel>
            <ItemsPanelTemplate>
                <Grid ShowGridLines="True">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                </Grid>
            </ItemsPanelTemplate>
        </Menu.ItemsPanel>
        <MenuItem Grid.Row="1" Header="Home"/>
        <MenuItem Grid.Row="2"
                  Header="Journals">
            <MenuItem Header="Create New"/>
            <MenuItem Header="View"/>
        </MenuItem>
        <MenuItem Grid.Row="3"
                  Header="Wishlists">
            <MenuItem Header="Create New"/>
            <MenuItem Header="View"/>
        </MenuItem>
        <MenuItem Grid.Row="4"
                  Header="Export">
            <MenuItem Header="Journals"/>
            <MenuItem Header="Wishlists"/>
        </MenuItem>
        <MenuItem Grid.Row="5"
                  Header="Settings">
            <MenuItem Header="Account"/>
            <MenuItem Header="General"/>
            <MenuItem Header="Log Out"/>
        </MenuItem>
    </Menu>

